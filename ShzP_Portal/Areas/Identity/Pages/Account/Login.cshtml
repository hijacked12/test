@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_identityLayout.cshtml";
}


<div class="row justify-content-center">
    <div class="col-md-10">
        <section>
            <div>
                <partial name="_Notification"></partial>
            </div>
            
            <form id="account" method="post">
                <h2 style="text-align:center;">@Localizer["Title"]</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="" />
                    <label asp-for="Input.Email" class="form-label">@Localizer["username"]</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br />
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="" />
                    <label asp-for="Input.Password" class="form-label">@Localizer["password"]</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @*@Html.DisplayNameFor(m => m.Input.RememberMe)*@
                            @Localizer["remember"]
                        </label>
                    </div>
                </div>
                <br />
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">@Localizer["submit"]</button>
                </div>
                <br />
                <div>
                    <div style="float:left;">
                        <a id="forgot-password" asp-page="./ForgotPassword">@Localizer["forgot"]</a>
                        
                    </div>
                    
                    <div style="float:right;">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@Localizer["new_acct"]</a>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
